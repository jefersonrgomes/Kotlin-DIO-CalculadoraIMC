<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textoPrincipal"
        style="@style/text_purple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:contentDescription="@string/descri_o_do_texto_de_apresenta_o_principal"
        android:text="@string/textoPrincipal"
        android:textSize="58sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textoSecundario"
        style="@style/text_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:text="@string/textoSecundario"
        android:textSize="24sp"
        />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="18dp"
        android:baselineAligned="false"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textViewRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:text="@string/textoRadioButton"
        android:textSize="22sp"
         />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="18dp"
        android:checked="false"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/textViewCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/textoCheckButton"
        android:textSize="22sp"
        />

</LinearLayout>