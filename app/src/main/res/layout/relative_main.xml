<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textViewIMC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/imc_calculator"
        android:textSize="38sp"
        android:textColor="#4DD0E1"
        android:textAlignment="center"
        android:textStyle="bold"

        android:layout_centerHorizontal="true"

        android:padding="10dp"

        />


    <EditText
        android:id="@+id/TextBoxPeso"
        style="@style/Widget.MaterialComponents.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAlignment="center"

        android:layout_below="@+id/textViewIMC"
        android:layout_centerHorizontal="true"

        android:paddingLeft="100dp"
        android:paddingTop="20dp"
        android:paddingRight="100dp"
        android:paddingBottom="10dp"

        android:text="@string/peso_atual"

        />

    <EditText
        android:id="@+id/TextBoxAltura"
        style="@style/Widget.MaterialComponents.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"

        android:layout_below="@+id/TextBoxPeso"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="10dp"
        android:paddingLeft="100dp"
        android:paddingTop="20dp"
        android:paddingRight="100dp"

        android:paddingBottom="10dp"

        android:text="@string/altura_atual"

        />

    <Button
        android:id="@+id/CalcularIMCbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/calcular_imc"
        android:textSize="24sp"
        android:textColor="@color/white"

        android:layout_below="@+id/TextBoxAltura"
        android:layout_centerHorizontal="true"

        android:paddingLeft="80dp"
        android:paddingTop="10dp"
        android:paddingRight="80dp"
        android:paddingBottom="10dp"

        android:layout_marginTop="20dp"

        style="@style/Platform.MaterialComponents.Light"

        />


</RelativeLayout>